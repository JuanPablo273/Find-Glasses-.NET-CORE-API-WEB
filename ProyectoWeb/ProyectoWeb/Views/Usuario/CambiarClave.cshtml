@model ProyectoWeb.Entities.UsuarioEnt

@{
    ViewData["Title"] = "CambiarClaveCuenta";
    Layout = "~/Views/Shared/_Layout_Administracion.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <h1>Cambiar Contraseña</h1>
                </div>

                @using (Html.BeginForm("CambiarClave", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasennaAnterior, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Anterior"})
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasenna, new { @onkeypress="EvitarEspacios(event)", @onpaste="return false", @ondrop="return false", @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Nueva"})
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="CAMBIAR CONTRASEÑA">
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script src="~/js/consultanombreapi.js"></script>