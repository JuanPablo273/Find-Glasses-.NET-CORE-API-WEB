@model ProyectoWeb.Entities.UsuarioEnt

@{
    ViewData["Title"] = "CambiarClaveCuenta";
    Layout = "~/Views/Shared/_Layout_Administracion.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <h1>FindGlasses</h1>
                </div>
                @using (Html.BeginForm("CambiarClaveCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    @Html.HiddenFor(m => m.IdUsuarioSeguro)

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasennaTemporal, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Temporal" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasenna, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Nueva"})
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="CAMBIAR CONTRASEÑA">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
